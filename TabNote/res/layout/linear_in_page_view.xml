<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_in_pageView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:paddingTop="0dp"
    tools:context="org.yyama.tabnote2.MainActivity" >

    <ScrollView
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="0dp"
            android:paddingTop="0dp" >

            <org.yyama.tabnote2.view.LineTextView
                android:id="@+id/text_in_page_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0dp"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <org.yyama.tabnote2.view.LineEditTextView
                android:id="@+id/edit_in_page_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0dp"
                android:background="#00000000"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/adSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>